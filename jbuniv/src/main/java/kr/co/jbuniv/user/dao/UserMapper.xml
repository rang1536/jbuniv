<select id="selectUserAdd" parameterType="Map" resultType="kr.co.jbuniv.user.domain.Users">
	SELECT
		SEQ_NO,
		HOME_ADDRESS,
		COM_ADDRESS
	FROM 
		JBUNIV.USERS
	WHERE

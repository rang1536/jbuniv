<!-- DB정제 > 선택된 인덱스조회(재경) -->
<select id="selectDataSelectedInSeoul" parameterType="Map" resultType="kr.co.jbuniv.user.domain.TbUser">
	SELECT
		*
	FROM
		JBUNIV.INSEOUL
	WHERE
		SEQ_NO &gt;= #{startNum}
	AND
		SEQ_NO &lt;= #{endNum}
	AND
		NAME IS NOT NULL
	ORDER BY SEQ_NO
</select>


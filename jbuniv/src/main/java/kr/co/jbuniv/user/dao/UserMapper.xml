<!-- 카테별 단과, 대학원별 동창목록조회 -->
<select id="selectUsersByRelType" parameterType="Map" resultType="kr.co.jbuniv.user.domain.Users">
	SELECT 
		* 
	FROM (SELECT
			ROWNUM AS RNUM,
			A.seq_no,
			A.name,
			A.relation_1,
			A.relation_2,
			A.hp,
			A.company,
			A.home_phone,
			A.direct_phone,
			A.main_phone
		FROM
			JBUNIV.USERS A
		WHERE
			RELATION_TYPE = #{relationType}
		AND
			RELATION_1 = #{relation1}
		)
	WHERE 
		RNUM BETWEEN #{startNum} AND #{endNum}	
</select>

<select id="selectUsersByRelTypeAll" parameterType="Map" resultType="kr.co.jbuniv.user.domain.Users">
	SELECT
		A.seq_no,
		A.name,
		A.relation_1,
		A.relation_2,
		A.hp,
		A.company,
		A.home_phone,
		A.direct_phone,
		A.main_phone
	FROM
		JBUNIV.USERS A
	WHERE
		RELATION_TYPE = #{relationType}
	AND
		RELATION_1 = #{relation1}
			
</select>

